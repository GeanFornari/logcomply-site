  #mlb2-31605198.ml-form-embedContainer .ml-form-embedWrapper { background-color: transparent !important; border: none !important; }
  #mlb2-31605198 .ml-form-formContent.horozintalForm .ml-form-horizontalRow { display: flex; gap: 1rem; align-items: center; }
  #mlb2-31605198 .ml-form-horizontalRow .ml-input-horizontal { flex: 1; }
  #mlb2-31605198 .ml-form-horizontalRow .ml-button-horizontal { flex-shrink: 0; }
  #mlb2-31605198 .ml-form-horizontalRow input[type="email"] {
    background-color: rgba(255, 255, 255, 0.1) !important;
    color: #ffffff !important;
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 0.375rem !important;
    padding: 0.625rem 0.875rem !important;
    font-size: 0.875rem !important;
    line-height: 1.25rem !important;
    width: 100% !important;
  }
  #mlb2-31605198 .ml-form-horizontalRow input[type="email"]:focus {
    outline: none !important;
    ring: 2px !important;
    ring-color: #4ade80 !important;
    border-color: #4ade80 !important;
