---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}
const {
  title = "Vektor Aero - Plataforma de Conformidade",
  description = "A plataforma indispensável para Gerenciamento de Fadiga de acordo com as normas do RBAC 117 e Lei do Aeronauta. Disponível para iOS e Android.",
} = Astro.props as Props;

// Normalize canonical URL - remove trailing slash
const canonicalURL = new URL(Astro.url.pathname.replace(/\/$/, '') || '/', Astro.site || 'https://vektoraero.com.br').href;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Vektor Aero" />
    <meta
      name="keywords"
      content="Vektor Aero, Gerenciamento de Fadiga, fadiga aeronautas, JourneyComply, RBAC 117, jornada de voo, Lei do Aeronauta, app para pilotos, conformidade aérea, cálculo de jornada, aplicativo para tripulação"
    />
    
    <!-- Open Graph / Facebook / WhatsApp -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://vektoraero.com.br/og-image.png" />
    <meta property="og:image:secure_url" content="https://vektoraero.com.br/og-image.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Vektor Aero - Plataforma de Conformidade Aérea" />
    <meta property="og:site_name" content="Vektor Aero" />
    <meta property="og:locale" content="pt_BR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://vektoraero.com.br/og-image.png" />
    <meta property="twitter:image:alt" content="Vektor Aero - Plataforma de Conformidade Aérea" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://assets.mailerlite.com" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Vektor Aero",
        "url": "https://vektoraero.com.br",
        "logo": "https://vektoraero.com.br/logo.png",
        "description": "Plataforma de conformidade para aviação com planejamento de jornada RBAC 117",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "",
          "contactType": "customer service",
          "email": "contato@vektoraero.com.br"
        },
        "sameAs": [
          "https://www.facebook.com/vektoraero/",
          "https://www.instagram.com/VektorAero",
          "https://www.youtube.com/@VektorAero"
        ]
      }
    </script>
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-J827Z0SRQ2"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-J827Z0SRQ2');
    </script>
  </head>
  <body class="bg-[#0B1726] text-gray-200 antialiased">
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
</style>
