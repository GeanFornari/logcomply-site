---
interface Props {
    variant?: 'primary' | 'secondary';
    href: string;
}

const { variant = 'primary', href } = Astro.props;

const baseClasses = "px-6 py-3 font-semibold rounded-lg transition-transform hover:scale-105";

const variantClasses = {
    primary: "bg-blue-600 text-white hover:bg-blue-500",
    secondary: "bg-transparent text-white border-2 border-white hover:bg-white hover:text-black"
};
---

<a href={href} class:list={[baseClasses, variantClasses[variant]]}>
    <slot /> </a>